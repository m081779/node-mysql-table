<h1 class="text-center">Table data from MySQL database</h1>

<div class="container table-responsive">
  <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Home</th>
      </tr>
    </thead>
    {{!-- iterating through results and constructing rows for the table using data.  Checks if null or empty, and returns unspecified for null entries --}}
    <tbody>
      {{#each results}}
        <tr>
          {{#if first_name}}
            <td>{{first_name}}</td>
          {{else}}
            <td>Unpecified</td>
          {{/if}}
          {{#if last_name}}
            <td>{{last_name}}</td>
          {{else}}
            <td>Unpecified</td>
          {{/if}}
          {{#if home}}
            <td>{{home}}</td>
          {{else}}
            <td>Unpecified</td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
    
  </table>
</div>